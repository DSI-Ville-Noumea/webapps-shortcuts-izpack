<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

    <programGroup defaultName="Applications Mairie" location="startMenu"/>
    <shortcut name="easyVista"
              target="C:\Program Files\Applications Mairie\Easy Vista\launch_ev.bat"
              workingDirectory="C:\Program Files\Applications Mairie\Easy Vista"
              iconFile="C:\Program Files\Applications Mairie\Easy Vista\icons\ev.ico"
              startup="no"
              initialState="normal"
              programGroup="yes"
              desktop="yes"
              startMenu="yes">

        <createForPack name="agent_pack"/>
    </shortcut>
    <shortcut name="kiosqueRh"
              target="C:\Program Files\Applications Mairie\Kiosque RH\launch_krh.bat"
              workingDirectory="C:\Program Files\Applications Mairie\Kiosque RH"
              iconFile="C:\Program Files\Applications Mairie\Kiosque RH\icons\kiosque_rh.ico"
              startup="no"
              initialState="normal"
              programGroup="yes"
              desktop="yes"
              startMenu="yes">

        <createForPack name="agent_pack"/>
    </shortcut>
</izpack:shortcuts>